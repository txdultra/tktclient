<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:tktclient">
    <SolidColorBrush x:Key="ReportBorderBrush" Color="#e4e9ea"/>
    <Style x:Key="ReportBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Border.BorderThickness" Value="0 0 1 1.5"/>
        <Setter Property="FrameworkElement.Margin" Value="0 16 0 0"/>
        <Setter Property="Border.BorderBrush" Value="{StaticResource ReportBorderBrush}"/>
    </Style>
    <Style x:Key="NormalTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Control.BorderBrush" Value="{StaticResource MainBorderBrush}"/>
        <Setter Property="Control.BorderThickness" Value="1"/>
        <Setter Property="Control.VerticalContentAlignment" Value="Center"/>
        <Setter Property="Control.Foreground" Value="{StaticResource MainGrayForeground}"/>
    </Style>
    <Style x:Key="NormalPasswordBox" TargetType="{x:Type PasswordBox}">
        <Setter Property="Control.BorderBrush" Value="{StaticResource MainBorderBrush}"/>
        <Setter Property="Control.BorderThickness" Value="1"/>
        <Setter Property="Control.Padding" Value="3 0 0 0"/>
        <Setter Property="Control.VerticalContentAlignment" Value="Center"/>
        <Setter Property="Control.Foreground" Value="{StaticResource MainGrayForeground}"/>
    </Style>
</ResourceDictionary>